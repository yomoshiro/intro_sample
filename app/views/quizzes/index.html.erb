<div class="container" data-controller="quiz search">
  <div class="quiz-screen">
    <div class="quiz-header">
      <div class="timer">
        <span class="timer-label">残り時間:</span>
        <span class="timer-value" data-quiz-target="timer">60</span>
        <span>秒</span>
      </div>
      <div class="score">
        <span class="score-label">スコア:</span>
        <span class="score-value" data-quiz-target="score">0</span>
      </div>
    </div>

    <div class="lyrics-display">
      <p class="lyrics" data-quiz-target="lyrics"></p>
    </div>

    <div class="answer-section">
      <div class="search-box">
        <input
          type="text"
          data-search-target="input"
          data-action="input->search#search focus->search#focus"
          placeholder="曲名を入力してください"
          class="search-input"
          autocomplete="off"
        />
        <div class="search-results" data-search-target="results"></div>
      </div>
    </div>

    <div class="feedback" data-quiz-target="feedback"></div>
  </div>
</div>
